@model CMCS.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<style>
    /* Matching the Dashboard Aesthetic */
    :root {
        --primary-blue: #4F46E5;
        --primary-blue-light: #6366F1;
        --success: #10B981;
        --warning: #F59E0B;
        --danger: #EF4444;
        --neutral-50: #F9FAFB;
        --neutral-100: #F3F4F6;
        --neutral-200: #E5E7EB;
        --neutral-600: #4B5563;
        --neutral-700: #374151;
        --neutral-800: #1F2937;
        --neutral-900: #111827;
    }

    .dashboard-wrapper {
        padding: 48px 24px;
        background: var(--neutral-50);
        min-height: calc(100vh - 73px);
    }

    .dashboard-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    /* Navigation / Back Button */
    .nav-header {
        margin-bottom: 24px;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--neutral-600);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

        .btn-back:hover {
            color: var(--primary-blue);
        }

    /* Main Content Card */
    .details-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: 1px solid var(--neutral-200);
        overflow: hidden;
    }

    /* Header Section inside Card */
    .card-header-section {
        padding: 32px;
        border-bottom: 1px solid var(--neutral-200);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 16px;
        background: white;
    }

    .claim-title h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--neutral-900);
        margin: 0 0 4px 0;
    }

    .claim-meta {
        color: var(--neutral-600);
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
        gap: 8px;
    }

        .status-badge.pending {
            background: #FEF3C7;
            color: #92400E;
        }

        .status-badge.approved {
            background: #D1FAE5;
            color: #065F46;
        }

        .status-badge.rejected {
            background: #FEE2E2;
            color: #991B1B;
        }

    /* Content Grid */
    .card-body-section {
        padding: 32px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 32px;
        margin-bottom: 40px;
    }

    .info-item label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--neutral-600);
        font-weight: 600;
        margin-bottom: 8px;
    }

    .info-item p {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--neutral-900);
        margin: 0;
    }

        .info-item p.amount {
            color: var(--primary-blue);
            font-size: 1.5rem;
        }

    /* Description Box */
    .description-section {
        background: var(--neutral-50);
        border-radius: 12px;
        padding: 24px;
        border: 1px solid var(--neutral-200);
        margin-bottom: 32px;
    }

        .description-section h3 {
            font-size: 1rem;
            font-weight: 600;
            color: var(--neutral-900);
            margin-bottom: 12px;
        }

        .description-section p {
            color: var(--neutral-700);
            line-height: 1.6;
            margin: 0;
        }

    /* Document Section */
    .document-card {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        border: 1px solid var(--neutral-200);
        border-radius: 12px;
        background: white;
        transition: all 0.2s;
    }

        .document-card:hover {
            border-color: var(--primary-blue);
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.1);
        }

    .doc-icon {
        width: 48px;
        height: 48px;
        background: #EEF2FF;
        color: var(--primary-blue);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .doc-info h4 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 4px 0;
        color: var(--neutral-900);
    }

    .doc-info p {
        font-size: 0.875rem;
        color: var(--neutral-600);
        margin: 0;
    }

    .btn-download {
        margin-left: auto;
        padding: 8px 16px;
        background: white;
        border: 1px solid var(--neutral-300);
        border-radius: 6px;
        color: var(--neutral-700);
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-download:hover {
            background: var(--neutral-50);
            color: var(--primary-blue);
            border-color: var(--primary-blue);
        }

    @@media (max-width: 768px) {
        .dashboard-wrapper {
            padding: 24px 16px;
        }

        .card-header-section {
            flex-direction: column;
        }

        .info-grid {
            grid-template-columns: 1fr;
            gap: 24px;
        }
    }
</style>

<div class="dashboard-wrapper">
    <div class="dashboard-container">
        <div class="nav-header">
            <a asp-action="Claims" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Claims
            </a>
        </div>

        <div class="details-card">
            <div class="card-header-section">
                <div class="claim-title">
                    <h1>Claim #@Model.Id.ToString().PadLeft(5, '0')</h1>
                    <div class="claim-meta">
                        <i class="fas fa-calendar"></i> Submitted on @Model.SubmissionDate.ToString("MMMM dd, yyyy")
                    </div>
                </div>
                <div class="status-badge @GetStatusClass(Model.Status)">
                    <i class="fas @GetStatusIcon(Model.Status)"></i>
                    @Model.Status.ToString()
                </div>
            </div>

            <div class="card-body-section">
                <div class="info-grid">
                    <div class="info-item">
                        <label>Total Amount</label>
                        <p class="amount">@Model.Amount.ToString("C")</p>
                    </div>
                    <div class="info-item">
                        <label>Hours Worked</label>
                        <p>@Model.HoursWorked.ToString("0.##") hrs</p>
                    </div>
                    <div class="info-item">
                        <label>Hourly Rate</label>
                        <p>@Model.HourlyRate.ToString("C")/hr</p>
                    </div>
                </div>

                <div class="description-section">
                    <h3><i class="fas fa-align-left me-2"></i>Description</h3>
                    <p>@Model.Description</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                {
                    <div class="description-section">
                        <h3><i class="fas fa-sticky-note me-2"></i>Additional Notes</h3>
                        <p>@Model.AdditionalNotes</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.DocumentPath))
                {
                    <div class="info-item">
                        <label style="margin-bottom: 12px;">Supporting Documentation</label>
                        <div class="document-card">
                            <div class="doc-icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="doc-info">
                                <h4>Supporting Document</h4>
                                <p>Attached proof for verification</p>
                            </div>
                            <a href="@Model.DocumentPath" target="_blank" class="btn-download">
                                <i class="fas fa-external-link-alt me-2"></i> View Document
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => "pending",
            ClaimStatus.Approved => "approved",
            ClaimStatus.Rejected => "rejected",
            _ => "pending",
        };
    }

    string GetStatusIcon(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => "fa-clock",
            ClaimStatus.Approved => "fa-check-circle",
            ClaimStatus.Rejected => "fa-times-circle",
            _ => "fa-circle",
        };
    }
}